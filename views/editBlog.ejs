<%-include("./partials/header")%>
<%-include("./partials/navbar")%>

<div class="container mt-5">
    <h3 class="my-3">Compose Your Blog Here...</h3>
    <form action="/edit/<%=blog._id%>" method="POST">
        <input type="text" name="title" class="form-control" placeholder="Enter Title" required value="<%=blog.title%>">
        <textarea name="content"  cols="30" rows="10" class="form-control mt-3" placeholder="Enter Content" required value="<%=blog.content%>"><%=blog.content%></textarea>
       <input type="submit" value="Save" class=" mt-4 btn btn-lg btn-primary">
    </form>
</div>
<%-include("./partials/footer")%>